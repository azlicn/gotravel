<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="vertical"
    android:paddingBottom="6dp">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="0"
        android:stretchColumns="1"
        >
        <TableRow android:id="@+id/flight_body_layover_row"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/flight_body_layover"
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_span="3"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/flight_body_layover_duration"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="10dp"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/flight_body_route"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_span="4"
                android:textStyle="bold|italic"
                android:textSize="10dp" />

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/flight_body_airline"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="10dp"
                android:linksClickable="true"
                />

            <TextView
                android:id="@+id/flight_body_departure"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/flight_body_arrival"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/flight_body_duration"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="right" />
        </TableRow>
        <TableRow android:id="@+id/flight_body_terminal_row"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/flight_body_terminal"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_span="4"
                android:textSize="10dp" />

        </TableRow>
        <TableRow android:id="@+id/flight_body_aircraft_row"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/flight_body_aircraft"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_span="4"
                android:textSize="10dp" />

        </TableRow>
    </TableLayout>
</LinearLayout>